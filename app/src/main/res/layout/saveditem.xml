<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="savedNews"
            type="com.ankit.crunch.NewsArticles"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="120dp"
        android:elevation="16dp"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#eeeeee"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/news_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/news_picture"
                app:setImageUrl="@{savedNews.urlToImage}"
                ></ImageView>
            <TextView
                android:id="@+id/news_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:text="@tools:sample/lorem"
                style="@style/AppTheme.H6"
                app:layout_constraintStart_toEndOf="@id/news_picture"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:text="@{savedNews.title}"
                android:maxLines="1"
                android:ellipsize="end"></TextView>
            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="2"
                android:padding="5dp"
                style="@style/AppTheme.H5"
                android:text="@{savedNews.description}"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/news_picture"
                app:layout_constraintTop_toBottomOf="@id/news_title"
                tools:text="@tools:sample/lorem"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>